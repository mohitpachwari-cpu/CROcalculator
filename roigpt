<script>
  // Helpers
  const fmtINR = n => {
    if (!isFinite(n)) return "—";
    return new Intl.NumberFormat("en-IN", { style: "currency", currency: "INR", maximumFractionDigits: 0 }).format(n);
  };
  const fmtX = x => (isFinite(x) ? `${x.toFixed(1)}x` : "—");

  // Elements
  const adSpendEl = document.getElementById('adSpend');
  const aovEl = document.getElementById('aov');
  const crEl = document.getElementById('cr');
  const crValEl = document.getElementById('crVal');

  const roasCurrentEl = document.getElementById('roasCurrent');
  const roasImprovedEl = document.getElementById('roasImproved');
  const revGainEl = document.getElementById('revGain');

  function calc(){
    const spend = parseFloat(adSpendEl.value) || 0;
    const aov = parseFloat(aovEl.value) || 0;
    const cr = parseFloat(crEl.value) || 0;

    // Revenue = clicks * CR * AOV; here we proxy clicks with spend (directional, for demo)
    // Using the structure you wanted:
    // Current Revenue = spend * (cr/100) * aov
    const revCurrent = spend * (cr/100) * aov;
    const roasCurrent = revCurrent / (spend || 1);

    // +20% CR uplift
    const crImproved = cr * 1.20;
    const revImproved = spend * (crImproved/100) * aov;
    const roasImproved = revImproved / (spend || 1);

    const revGain = revImproved - revCurrent;

    crValEl.textContent = `${cr.toFixed(1)}%`;
    roasCurrentEl.textContent = fmtX(roasCurrent);
    roasImprovedEl.textContent = fmtX(roasImproved);
    revGainEl.textContent = fmtINR(revGain);
  }

  ['input','change'].forEach(evt=>{
    adSpendEl.addEventListener(evt, calc);
    aovEl.addEventListener(evt, calc);
    crEl.addEventListener(evt, calc);
  });
  calc();

  // CTA (adjust link)
  document.getElementById('ctaBtn').addEventListener('click', () => {
    // Replace with your Calendly/Typeform URL
    window.open('https://calendly.com/', '_blank');
  });
</script>
